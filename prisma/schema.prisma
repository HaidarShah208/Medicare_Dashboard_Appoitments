generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  email            String   @unique
  password         String
  userName         String
  companyName      String?
  industryName     String?
  employees        String?
  confirmPassword  String?
 
  createAt         DateTime? @default(now())
  updateAt         DateTime? @updatedAt()
}

model PatientData {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  forename    String
  surname     String
  dob         String
  sex         String
  diagnoses   String
  notes       String
  phonenumber String
}

model appointmentData {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  patientsName       String
  purpose            String
  status             String
  duration           String
  type               String
  onlineConsultation Boolean
  selectedDate DateTime?  @default(now())
  selectedTime DateTime?  @default(now())
  room String?
}
